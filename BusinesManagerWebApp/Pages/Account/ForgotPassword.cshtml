@page
@model BusinesManagerWebApp.Pages.Account.ForgotPasswordModel
@{
}

<h1>ForgotPassword</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForgotPassModel.Email" class="control-label"></label>
                <input asp-for="ForgotPassModel.Email" class="form-control" />
                <span asp-validation-for="ForgotPassModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}